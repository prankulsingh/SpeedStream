{
  "manifest_version": 3,
  "name": "SpeedStream",
  "version": "2.0",
  "description": "Change the speed or playback rate of HTML5 videos on current tab.",
  "permissions": ["activeTab"],
  "action": {
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "speed_up": {
      "suggested_key": {
        "default": "Alt+M"
      },
      "description": "Speed up the video by 0.25x"
    },
    "slow_down": {
      "suggested_key": {
        "default": "Alt+N"
      },
      "description": "Slow down the video by 0.25x"
    }
  }
}
